<Element>
	<InventoryScrollable name="itemDisplay" fontPath="Data/Fonts/InputMonoBold_44x_64p_aa"/>
	<SearchTextfield name="itemFilter"/>
	<ModelViewer name="modelViewer"/>
	
	<!-- Category -->
	<EventHandler name="allCategory" function="ChangeCategory" button="allButton">
		<Arg key="category" value=""/>
		<Arg key="handler" value="resetCategory"/>
		<Arg key="image" value="allButton"/>
		<Arg key="imagePath" value="Data/Images/UI/pouch.png"/>
		<Arg key="imageColor" value="165, 42, 42, 255"/>
		<Arg key="divisionLine" value="doubleDivisionLine"/>
		<Arg key="divisionGap" value="0, 0.166"/>
		<Arg key="title" value="menuLabel"/>
		<Arg key="titleText" value="ALL"/>
	</EventHandler>

	<EventHandler name="weaponCategory" function="ChangeCategory" button="weaponButton">
		<Arg key="category" value="weapon"/>
		<Arg key="handler" value="resetCategory"/>
		<Arg key="image" value="weaponButton"/>
		<Arg key="imagePath" value="Data/Images/UI/sword.png"/>
		<Arg key="imageColor" value="102, 153, 204, 255"/>
		<Arg key="divisionLine" value="doubleDivisionLine"/>
		<Arg key="divisionGap" value="0.166, 0.333"/>
		<Arg key="title" value="menuLabel"/>
		<Arg key="titleText" value="WEAPON"/>
	</EventHandler>

	<EventHandler name="armorCategory" function="ChangeCategory" button="armorButton">
		<Arg key="category" value="armor"/>
		<Arg key="handler" value="resetCategory"/>
		<Arg key="image" value="armorButton"/>
		<Arg key="imagePath" value="Data/Images/UI/shield.png"/>
		<Arg key="imageColor" value="186, 140, 99, 255"/>
		<Arg key="divisionLine" value="doubleDivisionLine"/>
		<Arg key="divisionGap" value="0.333, 0.5"/>
		<Arg key="title" value="menuLabel"/>
		<Arg key="titleText" value="ARMOR"/>
	</EventHandler>

	<EventHandler name="consumableCategory" function="ChangeCategory" button="consumableButton">
		<Arg key="category" value="consumable"/>
		<Arg key="handler" value="resetCategory"/>
		<Arg key="image" value="consumableButton"/>
		<Arg key="imagePath" value="Data/Images/UI/resource_apple.png"/>
		<Arg key="imageColor" value="199, 55, 47, 255"/>
		<Arg key="divisionLine" value="doubleDivisionLine"/>
		<Arg key="divisionGap" value="0.5, 0.666"/>
		<Arg key="title" value="menuLabel"/>
		<Arg key="titleText" value="CONSUMABLE"/>
	</EventHandler>

	<EventHandler name="bookCategory" function="ChangeCategory" button="bookButton">
		<Arg key="category" value="book"/>
		<Arg key="handler" value="resetCategory"/>
		<Arg key="image" value="bookButton"/>
		<Arg key="imagePath" value="Data/Images/UI/book_open.png"/>
		<Arg key="imageColor" value="98, 74, 46, 255"/>
		<Arg key="divisionLine" value="doubleDivisionLine"/>
		<Arg key="divisionGap" value="0.666, 0.833"/>
		<Arg key="title" value="menuLabel"/>
		<Arg key="titleText" value="BOOK"/>
	</EventHandler>

	<EventHandler name="miscCategory" function="ChangeCategory" button="miscButton">
		<Arg key="category" value="misc"/>
		<Arg key="handler" value="resetCategory"/>
		<Arg key="image" value="miscButton"/>
		<Arg key="imagePath" value="Data/Images/UI/puzzle.png"/>
		<Arg key="imageColor" value="120, 190, 33, 255"/>
		<Arg key="divisionLine" value="doubleDivisionLine"/>
		<Arg key="divisionGap" value="0.833, 1"/>
		<Arg key="title" value="menuLabel"/>
		<Arg key="titleText" value="MISC"/>
	</EventHandler>
	
	<!-- Sort -->
	<EventHandler name="nameSort" function="ChangeSort" button="nameSortButton">
		<Arg key="sorter" value="name"/>
		<Arg key="handler" value="resetSort"/>
		<Arg key="image" value="nameSortOrder"/>
		<Arg key="ascendImagePath" value="Data/Images/UI/arrow_up.png"/>
		<Arg key="descendImagePath" value="Data/Images/UI/arrow_down.png"/>
		<Arg key="ascendColor" value="100, 255, 100, 255"/>
		<Arg key="descendColor" value="255, 100, 100, 255"/>
	</EventHandler>

	<EventHandler name="weightSort" function="ChangeSort" button="weightSortButton">
		<Arg key="sorter" value="weight"/>
		<Arg key="handler" value="resetSort"/>
		<Arg key="image" value="weightSortOrder"/>
		<Arg key="ascendImagePath" value="Data/Images/UI/arrow_up.png"/>
		<Arg key="descendImagePath" value="Data/Images/UI/arrow_down.png"/>
		<Arg key="ascendColor" value="100, 255, 100, 255"/>
		<Arg key="descendColor" value="255, 100, 100, 255"/>
	</EventHandler>

	<EventHandler name="valueSort" function="ChangeSort" button="valueSortButton">
		<Arg key="sorter" value="value"/>
		<Arg key="handler" value="resetSort"/>
		<Arg key="image" value="valueSortOrder"/>
		<Arg key="ascendImagePath" value="Data/Images/UI/arrow_up.png"/>
		<Arg key="descendImagePath" value="Data/Images/UI/arrow_down.png"/>
		<Arg key="ascendColor" value="100, 255, 100, 255"/>
		<Arg key="descendColor" value="255, 100, 100, 255"/>
	</EventHandler>
	
	<!-- Filter Update -->
	<EventHandler name="filterUpdate" function="FilterUpdate"/>
	
	<!-- Reset Category -->
	<EventHandler name="resetCategory" function="ResetCategory">
		<Arg key="elements" value="allButton,weaponButton,armorButton,consumableButton,bookButton,miscButton"/>
		<Arg key="images" value="Data/Images/UI/pouch.png,Data/Images/UI/sword.png,Data/Images/UI/shield.png,Data/Images/UI/resource_apple.png,Data/Images/UI/book_closed.png,Data/Images/UI/puzzle.png"/>
		<Arg key="color" value="200, 200, 200, 255"/>
	</EventHandler>
	
	<!-- Reset Sort -->
	<EventHandler name="resetSort" function="ResetSort">
		<Arg key="elements" value="nameSortOrder,weightSortOrder,valueSortOrder"/>
		<Arg key="color" value="0, 0, 0, 0"/>
	</EventHandler>
</Element>


